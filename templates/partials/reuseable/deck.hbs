<div>
    <table>
        <tr>
            {{#each deck as |card|}}
            <td class="item" data-itemId="{{this.id}}" data-itemindex="{{@index}}" style="text-align: center;">
                <div class="flexrow" style="display: inline-block;">
                    {{#if (eq data.data.sleeved_card card.name)}}
                    <a>{{this.name}} (Sl)</a>
                    {{else}}
                    <a>{{this.name}}</a>
                    {{/if}}
                    {{#if (eq this.type 'action_deck')}}
                    <a class="aim-button"><i class="fas fa-crosshairs" title="Aim (Adds +2 to next shot, stacks to +6)"> </i></a>
                        {{#lvl_head}}
                    <a class="recycle-card"><i class="fas fa-sync-alt" title="Cycle this card"></i> </a>
                        {{/lvl_head}}
                    <a class="play-card"><i class="fas fa-hand-paper" title="Play this Card"></i></a>
                    {{else}}
                    <a class="play-item-card"><i class="fas fa-hand-paper" title="Play this Card"></i></a>
                    {{/if}}
                </div>
            </td>
            {{/each}}
        </tr>
    </table>
    {{#if (ne this.type 'action_deck')}}
        <a class="center discard-hand" data-type="{{deck[0].type}}">Discard All</a>
    {{/if}}
</div>