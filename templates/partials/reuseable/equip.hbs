{{!-- Pass label for the name of the dropdown --}}
<section>
    <select name="data.equipped.{{label}}" id="{{label}}-select">
        {{#each items as |item|}}
            {{#if (eq item.slot slot)}}
                {{#if (eq data.data.equipped[label] item.id)}}
                    <option value="{{item.id}}" selected>{{item.name}}</option>
                {{else}}
                    <option value="{{item.id}}">{{item.name}}</option>
                {{/if}}
            {{/if}}
        {{/each}}
    </select>
</section>