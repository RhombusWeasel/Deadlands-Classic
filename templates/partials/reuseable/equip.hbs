{{!-- Pass label for the name of the dropdown --}}
<section>
    <select class="item {{label}}-select" name="data.equipped.{{label}}" id="{{label}}-select" data-slot="{{label}}">
        <option value="Nuthin">Nuthin'</option>
        {{log 'DC | equip.hbs | ' this root}}
        {{#each items as |item|}}
            {{log 'DC | equip.hbs | #each items |' this @../label}}
            {{#if (eq item.slot slot)}}
                {{log 'DC | equip.hbs | #each items | #if (eq slotitem.slot)' this @root}}
                <div class="item" data-itemid="{{item.id}}">
                {{#if_equipped label item.id}}
                    {{log 'DC | equip.hbs | #each items | #if (eq slotitem.slot) | is_equipped | Found!!!' this @root}}
                    <option data-itemid="{{item.id}}" value="{{item.id}}" selected>{{item.name}}</option>
                {{else}}
                    {{log 'DC | equip.hbs | #each items | #if (eq slotitem.slot) | is_equipped | Not found :(' this @root}}
                    <option value="{{item.id}}">{{item.name}}</option>
                {{/if_equipped}}
                </div>
            {{/if}}
        {{/each}}
    </select>
</section>