<section>
    <tr>
        <th>Use Reliability</th>
        {{#if (eq data.data.reliability true)}}
        <td><input type="checkbox" name="data.reliability" checked/></td>
    </tr>
    <tr>
        <th>Reliability</th>
        <td><input type="number" name="data.reliability_value" value="{{data.data.reliability_value}}"></td>
        {{else}}
        <td><input type="checkbox" name="data.reliability"/></td>
        {{/if}}
    </tr>
    <tr>
        <th>{{localize "dc.items.combat.firearm.vehicle_mountable"}}</th>
        {{#if (eq data.data.vehicle_mountable true)}}
        <td><input type="checkbox" name="data.vehicle_mountable" checked/></td>
        {{else}}
        <td><input type="checkbox" name="data.vehicle_mountable"/></td>
        {{/if}}
    </tr>
{{#if (eq data.data.equippable true)}}
    <tr>
        <th>{{localize "dc.items.goods.equippable"}}</th>
        <td><input type="checkbox" name="data.equippable" checked/></td>
    </tr>
    <tr>
        <th>Slot</th>
        <td><input style="text-align: center;" type="text" name="data.slot" value="{{data.data.slot}}"/></td>
    </tr>
    <tr>
    {{#if (eq data.data.slot 'hand')}}
        <th>{{localize "dc.items.combat.firearm.multi_slot"}}</th>
        {{#if (eq data.data.multi_slot true)}}
        <td><input type="checkbox" name="data.multi_slot" checked/></td>
        {{else}}
        <td><input type="checkbox" name="data.multi_slot"/></td>
        {{/if}}
    {{/if}}
    </tr>
    <tr>
        <th>Emits Light</th>
    {{#if (eq data.data.emits_light true)}}
        <td><input type="checkbox" name="data.emits_light" checked/></td>
    </tr>
    <tr>
        <th>Dim Radius</th>
        <td><input type="number" name="data.dim_light" value="{{data.data.dim_light}}"></td>
    </tr>
    <tr>
        <th>Bright Radius</th>
        <td><input type="number" name="data.bright_light" value="{{data.data.bright_light}}"></td>
    </tr>
    <tr>
        <th>Light Angle</th>
        <td><input type="number" name="data.light_angle" value="{{data.data.light_angle}}"></td>
    {{else}}
        <td><input type="checkbox" name="data.emits_light"/></td>
    {{/if}}
    </tr>
    {{> "systems/deadlands_classic/templates/partials/reuseable/equip_mods.hbs" this}}
{{else}}
    <tr>
        <th>{{localize "dc.items.goods.equippable"}}</th>
        <td><input type="checkbox" name="data.equippable"/></td>
    </tr>
{{/if}}
</section>