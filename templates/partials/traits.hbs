<section>
<div class="traits">
    <h2 class="h1">Skills 'n' Such</h2>
    <div style="overflow-y:scroll; height:500px">
        {{#each data.traits as |trait|}}
        <div class="flexbox trait-data" data-trait="{{@key}}" data-level="{{trait.level}}" data-die="{{trait.die_type}}" data-mod="{{trait.modifier}}">
            <a class="trait-label trait-roll">{{trait.name}}</a>
            <p style="align-self: flex-end;">{{trait.level}}</p>
            {{#has_bounty trait.level 'trait'}}
            <a style="align-self: flex-end;" class="trait-buff"><i class="fas fa-plus-square"></i></a>
            {{/has_bounty}}
            <p style="align-self: flex-end;">{{trait.die_type}}</p>
            {{#die_upgrade trait.die_type}}
            <a style="align-self: flex-end;" class="die-buff"><i class="fas fa-plus-square"></i></a>
            {{/die_upgrade}}
            <p style="align-self: flex-end;"> + {{trait.modifier}}</p>
        </div>
        <div>
            <table>
                <!--
                <tr>
                    <th class="skill-name" >{{localize "dc.skill_labels.name"}}</th>
                    <th class="skill-input">{{localize "dc.skill_labels.level"}}</th>
                    <th class="skill-input">BP</th>
                    <th class="skill-input">{{localize "dc.skill_labels.modifier"}}</th>
                </tr>
                -->
                {{#each skills as |skill|}}
                <tr class="skill-data" data-trait="{{@../key}}" data-skill="{{@key}}" data-level="{{this.level}}" data-mod="{{this.modifier}}">
                    <td style="text-align:left;" class="skill-roll"><a>{{this.name}}</a></td>
                    <td style="text-align:center;">{{this.level}}</td>
                    {{#has_bounty this.level 'skill'}}
                    <td style="text-align:center;" class="skill-buff" ><a><i class="fas fa-plus-square"></i></a></td>
                    {{/has_bounty}}
                    <td style="text-align:center;">{{this.modifier}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
        {{/each}}
    </div>
</div>
</section>