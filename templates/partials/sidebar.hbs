<section>
    <div style="align-items: center;">
        <h1 style="text-align: center;">
            <div data-edit="data.name" contenteditable>
                {{actor.name}}
            </div>
        </h1>
        <div style="align-items: center;"><img style="width: 128px;" src="{{actor.img}}" data-edit="img"/></div>
    </div>
    <div>
        <h1 style="text-align: center;">Hinderances</h1>
        {{#each hinderances as |hind|}}
        <div style="display: flex; flex-direction: row;">
            <input class="input" style="display: inline-block; width: 400%;" type="text" value="{{hind.name}}"/>
            <input class="input" style="text-align: center;" type="text" value="{{hind.data.cost}}">
            <i style="padding-top: 5px" class="fas fa-info-circle info-button"></i>
        </div>
        {{/each}}
    </div>
    <div>
        <h1 style="text-align: center;">Edges</h1>
        {{#each edges as |edge|}}
        <div style="display: flex; flex-direction: row;">
            <input class="input" style="display: inline-block; width: 400%;" type="text" value="{{edge.name}}"/>
            <input class="input" style="text-align: center;" type="text" value="{{edge.data.cost}}">
            <i style="padding-top: 5px" class="fas fa-info-circle info-button"></i>
        </div>
        {{/each}}
    </div>
    <div>
        <h1 style="text-align: center;">Melee Weapons</h1>
        <table>
            <tr>
                <th>{{localize "dc.skill_labels.name"}}</th>
                <th>{{localize "dc.items.combat.melee.damage"}}</th>
            </tr>
            {{#each melee_weapons as |weapon|}}
            <tr>
                <td><input class="input" type="text" name="data.melee_weapons[{{@index}}].name" value="{{weapon.name}}"/></td>
                <td><input class="input" style="text-align: center;" type="text" name="data.melee_weapons[{{@index}}].ammo" value="{{weapon.data.damage}}"/></td>
            </tr>
            {{/each}}
        </table>
    </div>
    <div>
        <h1 style="text-align: center;">Firearms</h1>
        <table>
            <tr>
                <th>{{localize "dc.skill_labels.name"}}</th>
                <th>{{localize "dc.items.combat.firearm.ammo"}}</th>
            </tr>
            {{#each firearms as |gun|}}
            <tr>
                <td><input class="input" type="text" name="data.firearms[{{@index}}].name" value="{{gun.name}}"/></td>
                <td><input class="input" style="text-align: center;" type="text" name="data.firearms[{{@index}}].ammo" value="{{gun.data.ammo}}"/></td>
            </tr>
            {{/each}}
        </table>
    </div>
    <div>
        <h1 style="text-align: center;">Hexes</h1>
        <table>
            <tr>
                <th>{{localize "dc.skill_labels.name"}}</th>
                <th>{{localize "dc.items.combat.hex.trait"}}</th>
            </tr>
            {{#each hexes as |hex|}}
            <tr>
                <td><input class="input" type="text" name="data.hexes[{{@index}}].name" value="{{hex.name}}"/></td>
                <td><input class="input" style="text-align: center;" type="text" name="data.hexes[{{@index}}].trait" value="{{hex.data.trait}}"/></td>
            </tr>
            {{/each}}
        </table>
    </div>
    <div>
        <h1 style="text-align: center;">Miracles</h1>
        <table>
            <tr>
                <th>{{localize "dc.skill_labels.name"}}</th>
                <th>{{localize "dc.items.combat.miracle.tn"}}</th>
            </tr>
            {{#each miracles as |miracle|}}
            <tr>
                <td><input class="input" type="text" name="data.miracle[{{@index}}].name" value="{{miracle.name}}"/></td>
                <td><input class="input" style="text-align: center;" type="text" name="data.miracle[{{@index}}].tn" value="{{miracle.data.tn}}"/></td>
            </tr>
            {{/each}}
        </table>
    </div>
    <div>
        <h1 style="text-align: center;">Favors</h1>
        <table>
            <tr>
                <th>{{localize "dc.skill_labels.name"}}</th>
                <th>{{localize "dc.items.combat.favor.appeasement"}}</th>
            </tr>
            {{#each favors as |favor|}}
            <tr>
                <td><input class="input" type="text" name="data.favors[{{@index}}].name" value="{{favor.name}}"/></td>
                <td><input class="input" style="text-align: center;" type="text" name="data.favors[{{@index}}].appeasement" value="{{favor.data.appeasement}}"/></td>
            </tr>
            {{/each}}
        </table>
    </div>
</section>