<section>
    {{#if blueprint_deck}}
        {{> systems/deadlands_classic/templates/partials/reuseable/deck.hbs deck=blueprint_deck deck_type='blueprint_deck' hand=blueprint_hand}}
    {{/if}}
    <div class="flexrow">
        <div>
            {{!-- Components --}}
            <h2 class="center">Components</h2>
            <table>
            {{#each components as |comp|}}
                <tr class="item" data-itemId="{{comp.id}}">
                    <td>{{comp.name}}</td>
                    <td>x{{comp.data.data.amount}}</td>
                    <td><a class="item-delete"><i class="fas fa-trash" title="Remove {{comp.name}}"></i></a></td>
                </tr>
            {{/each}}
            </table>
        </div>
        <div>
            {{!-- Blueprints --}}
            <h2 class="center">Blueprints</h2>
            <div class="center"><a class="blueprint">Create Blueprint</a></div>
            <table>
            {{#each blueprints as |bp|}}
                <tr class="center item" data-itemId="{{bp.id}}">
                    <td class="perc10 center"><a class="info-button"><i class="fas fa-info-circle"></i></a></td>
                    <td class="perc50 center">{{bp.name}}</td>
                    <td class="perc10 center">{{bp.data.data.reliability_value}}</td>
                    <td class="perc20 center">{{bp.data.data.hand}}</td>
                    <td class="perc10 center"><a class="item-delete"><i class="fas fa-trash" title="Remove {{bp.name}}"></i></a></td>
                </tr>
            {{/each}}
            </table>
        </div>
    </div>
</section>