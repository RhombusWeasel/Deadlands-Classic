<section>
    <div class="flexrow">
    {{#if edges}}
        <div>
            <h2 class="center">Edges</h2>
            <table>
            {{#each edges as |edge|}}
            <tr class="item" data-itemId="{{this.id}}">
                <td class="perc10 center"><a class="info-button"><i class="fas fa-info-circle"></i></a></td>
                <td class="perc70">{{this.name}}</td>
                <td class="perc10 center">{{this.data.data.cost}}</td>
                <td class="perc10 center"><a class="item-delete"><i class="fas fa-trash" title="Remove {{this.name}}"></i></a></td>
            </tr>
            {{/each}}
            </table>
        </div>
    {{/if}}
    {{#if hinderances}}
        <div>
            <h2 class="center">Hinderances</h2>
            <table>
            {{#each hinderances as |hind|}}
            <tr class="item" data-itemId="{{this.id}}">
                <td class="perc10 center"><a class="info-button"><i class="fas fa-info-circle"></i></a></td>
                <td class="perc70">{{this.name}}</td>
                <td class="perc10 center">{{this.data.data.cost}}</td>
                <td class="perc10 center"><a class="item-delete"><i class="fas fa-trash" title="Remove {{this.name}}"></i></a></td>
            </tr>
            {{/each}}
            </table>
        </div>
    {{/if}}
    </div>
    <h2 class="center">Description</h2>
    <textarea class="textbox" name="data.description" id="description" rows="10" wrap="hard">{{data.data.description}}</textarea>
    <h2 class="center">Yer worst nightmare</h2>
    <textarea class="textbox" name="data.nightmare" id="nightmare" rows="10"  wrap="hard">{{data.data.nightmare}}</textarea>
</section>