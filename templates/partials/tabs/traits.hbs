<section>
<div class="traits typed">
    <h2 class="h1">Skills 'n' Such</h2>
    <div>
    {{#each data.data.traits as |trait|}}
        <div>
            <table>
                <tr class="trait-data" data-trait="{{@key}}" data-level="{{trait.level}}" data-die="{{trait.die_type}}" data-mod="{{trait.modifier}}">
                    <td class="perc50 trait-label"><a class="trait-roll">{{trait.name}}</a></td>
            {{#has_bounty trait.level 'trait'}}
                    <td class="perc10 right"><a class="trait-buff">[+]</a></td>
            {{/has_bounty}}
                    <td class="perc10 center">{{trait.level}}</td>
            {{#die_upgrade trait.die_type}}
                    <td class="perc10 center"><a class="die-buff">[+]</a></td>
            {{/die_upgrade}}
                    <td class="perc10 center">{{trait.die_type}}</td>
                    <td class="perc10 center">+{{trait.modifier}}</td>
                </tr>
            </table>
            <div>
                <table>
                {{#each skills as |skill|}}
                    <tr class="skill-data" data-trait="{{@../key}}" data-skill="{{@key}}" data-level="{{skill.level}}" data-mod="{{skill.modifier}}">
                        <td class="perc70"><a class="skill-roll">{{this.name}}</a></td>
                    {{#has_bounty this.level 'skill'}}
                        <td class="perc10 right"><a class="skill-buff">[+]</a></td>
                    {{/has_bounty}}
                        <td class="perc10 center">{{this.level}}</td>
                        <td class="perc10 center">{{this.modifier}}</td>
                    </tr>
                {{/each}}
                </table>
            </div>
        </div>
    {{/each}}
    </div>
</div>
</section>